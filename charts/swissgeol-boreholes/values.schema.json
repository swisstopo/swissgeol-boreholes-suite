{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "minLength": 1
        },
        "domain": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        }
      },
      "required": ["version"]
    },
    "dataextraction": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["version"]
    },
    "ocr": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "minLength": 1
        },
        "automountServiceAccountToken": {
          "type": "boolean"
        }
      },
      "required": ["version"]
    },
    "s3": {
      "type": "object",
      "properties": {
        "secure": {
          "anyOf": [
            { "type": "string", "enum": ["0", "1"] },
            { "type": "integer", "enum": [0, 1] }
          ],
          "default": "1"
        }
      }
    }
  }
}
